generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============= Core User Model =============
model User {
  id                    Int              @id @default(autoincrement())
  email                 String           @unique
  password              String
  username              String
  fullName              String?
  profilePicture        String?
  bio                   String?
  role                  Role             @default(USER)
  isActive              Boolean          @default(true)
  isOnline              Boolean          @default(false)
  lastSeen              DateTime?
  lastActiveAt          DateTime?
  lastLogin             DateTime?
  
  // Email verification
  emailVerified         Boolean          @default(false)
  verificationToken     String?          @unique
  verificationExpires   DateTime?
  
  // Password reset
  resetPasswordToken    String?          @unique
  resetPasswordExpires  DateTime?
  
  // Onboarding
  onboardingCompleted   Boolean          @default(false)
  onboardingStep        Int              @default(0)
  
  // User settings/preferences
  settings              Json?            // { theme, language, notifications, etc. }
  
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  
  projectMembers        ProjectMember[]
  notifications         Notification[]
  userStats             UserStats?
  sentInvitations       Invitation[]     @relation("InvitedBy")
  
  @@index([email])
  @@index([isActive])
  @@index([verificationToken])
  @@index([resetPasswordToken])
}

// ============= Permissions & Relations =============
model ProjectMember {
  id          Int      @id @default(autoincrement())
  projectId   String   // MongoDB Project._id (stored as string)
  userId      Int
  role        String   @default("member") // owner, admin, member, viewer
  permissions Json?    // { canEdit: true, canDelete: false, canInvite: true }
  joinedAt    DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

// ============= Notifications =============
model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String   // task_assigned, comment_added, project_invite, etc.
  content   String
  metadata  Json?    // { projectId, taskId, etc. }
  seen      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, seen])
  @@index([createdAt])
}

// ============= Analytics Models (Synced from MongoDB) =============
model UserStats {
  id                  Int      @id @default(autoincrement())
  userId              Int      @unique
  totalProjectsOwned  Int      @default(0)
  totalProjectsJoined Int      @default(0)
  totalTasksCreated   Int      @default(0)
  totalTasksCompleted Int      @default(0)
  totalTasksInProgress Int     @default(0)
  totalComments       Int      @default(0)
  lastActivityAt      DateTime @default(now())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ProjectAnalytics {
  id              Int      @id @default(autoincrement())
  projectId       String   @unique  // MongoDB Project._id
  totalTasks      Int      @default(0)
  completedTasks  Int      @default(0)
  inProgressTasks Int      @default(0)
  totalMembers    Int      @default(0)
  totalComments   Int      @default(0)
  lastUpdated     DateTime @default(now())
  createdAt       DateTime @default(now())
}

model TaskMetrics {
  id          Int       @id @default(autoincrement())
  taskId      String    @unique  // MongoDB Task._id
  projectId   String    // MongoDB Project._id
  userId      Int?      // PostgreSQL User.id (assignee)
  timeSpent   Int       @default(0)  // in minutes
  status      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  
  @@index([projectId])
  @@index([userId])
}

enum Role {
  ADMIN
  USER
}

// ============= Invitations =============
model Invitation {
  id          String   @id @default(uuid())
  email       String
  role        String   @default("member")
  projectId   String?  // MongoDB Project._id (optional)
  invitedById Int
  status      String   @default("pending") // pending, accepted, expired, cancelled
  token       String   @unique
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  invitedBy   User     @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  
  @@index([email])
  @@index([token])
  @@index([status])
}
